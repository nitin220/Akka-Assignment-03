<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>./src/main/resources/Report.log</file>
        <append>true</append>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="FILE"/>
    </root>
</configuration>